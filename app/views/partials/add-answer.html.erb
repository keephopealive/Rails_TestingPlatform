<li class='ui-state-default test2'>
    <div class='boxed-answer padding5'>
        <form class='answer answersFromQ<%= session[:tempQuestion_id] %>' method='post' action='/updateAnswer'>
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <input type='hidden' name='test_id' value='<%= session[:test_id] %>'>
            <input type='hidden' name='question_id' value='<%= session[:tempQuestion_id] %>'>
            <input type='hidden' name='answer_id' value='<%= session[:tempAnswer_id] %>'>
            <input type='checkbox' name='answerValue' group-name='answerValue<%= session[:tempQuestion_id] %>'  question_id='<%= session[:tempQuestion_id] %>' value='false' class='radio correct-answer'/>
            <input type='text' class='answer answer-content' name='answer' value=''>
        </form>
        <form class='delete-answer'>
            <input type='hidden' name='question_id' value='<%= session[:tempQuestion_id] %>'>
            <input type='hidden' name='answer_id' value='<%= session[:tempAnswer_id] %>'>
            <input type='submit' value='DELETE' class='btn btn-danger btn-xs added-answer'>
        </form>
    </div>
</li>