<% if(will_paginate @results) %>
    <h3>Refine your search for more relevant results</h3>
<% end %>
<table class="table table-results addRows">
    <thead>
        <tr>
            <td>Test Name</td>
            <td>Test ID:</td>
            <td>Student Name:</td>
            <td>Student Email:</td>
            <td>Pass/Fail:</td>
            <td>Score (%):</td>
            <td>Date Taken:</td>
            <td>Overtime:</td>
        </tr>
    </thead>
    <% @results.each do |result| %>
    <% if result.score.to_i > 70 %>
        <tr class="success">
    <% else %>
        <tr class="danger">
    <% end %>
        <td><%= result.test_name %></td>
        <td><%= result.test_id %></td>
        <td><%= result.first_name %> <%= result.last_name %></td>
        <td><%= result.email %></td>
        <td>
            <% if result.score.to_i > 70 %>
                <%= "Pass" %>
            <% else %>
                <%= "Fail" %>
            <% end %>
        </td>
        <td><%= result.score %></td> 
        <td><%= result.created_at %></td>
        <td><%= result.overtime %></td>   
    </tr>
    <% end %>
</table>
