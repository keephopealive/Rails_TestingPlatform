<head>
    <title>Admin Create/Edit Test</title>
</head>
<form>
	<div class="row"> <!-- SETION: TEST DETAILS ROW -->
	    <div class="col-xs-12 formatted-div">
            <div class="row">
                <h3>Update Test Information:</h3>
                <div class="col-xs-5 padding5">
                    <div class="col-xs-4">
                        <label>Test Name:</label><br>
                        <label>Test URL:</label>
                    </div>
                    <div class="col-xs-8 font-black">
                        <input class="wide100" value="<%= @currentTest.name %>"><br>
                        <input class="wide100" value="url/here/">
                    </div>
                </div>
                <div class="col-xs-4 padding5">
                    <div class="col-xs-4">
                        <label>Test ID:</label>
                    </div>
                    <div class="col-xs-8">
                        <input class="font-black wide100" value="<%= @currentTest.id %>" readonly>
                    </div>
                </div>
                <div class="col-xs-3 padding5">
                    <button class="btn btn-primary">SAVE</button>
                    <button class="btn btn-danger">Delete</button>
                </div>
            </div>
		</div>
	</div> <!-- END SETION: TEST DETAILS ROW -->
    


    <ol id="sortable2" class="ol-questions" toleranceElement=" > ol"> <!-- QUESTIONS SORT -->       
    <% @currentTest.questions.each do |question| %> 
        <li class='ui-state-default'>
            <div class='row'>
                <div class='col-xs-12 questions-div'>
                    <div class='row'>
                        <div class='col-xs-12'>
                            <div class='question'>
                                <textarea name='question'><%= question.question %></textarea>
                            </div>
                        </div>
                    </div>
                    <div class='row'>
                        <div class='col-xs-6'>
                            <div class='answers'>
                                <h4>Click the circle to identify correct answer.</h4>
                                <div id='sortable' class='answerbank'>
                                    <ol id='ol-questions-id'>
                                        <% question.answers.each do |answer| %>
                                            <li class='ui-state-default test2'>
                                                <div class='boxed-answer'>
                                                    <label class='answer'>
                                                        <% if (answer.correct == true) %>
                                                            <input type='radio' name='correctAnswer' checked>
                                                        <% else %>
                                                            <input type='radio' name='correctAnswer'>
                                                        <% end %>
                                                    </label>
                                                    <input type='text' class='answer' name='answer<%= answer.id %>' value='<%= answer.answer %>'>
                                                    <button class='btn btn-danger btn-xs added-answer'>X</button>
                                                </div>
                                            </li>
                                        <% end %>
                                    </ol>
                                </div>
                                <button class='boxed-answer add-answer'>Add an answer</button>
                            </div>
                        </div>
                        <div class='col-xs-6'>
                            <div class='row'>
                                <div class='options'>
                                    <div class='row padding15'>
                                        <h4>Set the test options.</h4>
                                        <div class='top'>
                                            <div class='col-xs-6 padded'>
                                                <label>Enter Time Limit:</label><br>
                                            </div>
                                            <div class='col-xs-6 padded'>
                                                <input type='stopwatch' class='timelimit' value="<%= question.timelimit %>" placeholder='00:00'>
                                                <br>
                                            </div>
                                        </div>
                                    </div>
                                    <div class='row padding15'>
                                        <div class='bottom padded'>
                                            <button class='btn btn-danger delete_btn'>DELETE QUESTION</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </li>
	<% end %>
      
    </ol> <!-- END QUESTIONS SORT -->

    <div class="row">
        <div class="col-xs-offset-2 col-xs-8">
           <div class="formatted-div">
                <a href="" class="btn btn-success wide40" id="addQuestion">Add New Question</a>
                <input type='submit' value='SAVE' class="btn btn-primary wide40">
           </div>
        </div>
    </div>

</form>