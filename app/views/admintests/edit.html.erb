        $(document).on('click', '#addQuestion', function(){
            $('#sortable2').append("<li class='ui-state-default'><div class='row'> <div class='col-xs-12 questions-div '><div class='row'><div class='col-xs-12'><div class='question'><textarea></textarea></div></div></div><div class='row'><div class='col-xs-6'><div class='answers'> <h4>Click the circle to identify correct answer.</h4><div id='sortable' class='answerbank'><ol id='ol-questions-id'></ol></div><button class='boxed-answer add-answer'>Add an answer</button></div></div><div class='col-xs-6'><div class='row'><div class='options'><div class='row padding15'><h4>Set the test options.</h4><div class='top'><div class='col-xs-6 padded'><label>Enter Time Limit:</label><br></div><div class='col-xs-6 padded'><input type='stopwatch' class='timelimit' placeholder='00:00'> <br></div></div></div><div class='row padding15'><div class='bottom padded'><button class='btn btn-danger delete_btn'>DELETE QUESTION</button></div></div></div></div></div></div></div></div></li>");            
