            if(_answerIndex == null)
                var _answerIndex = 0;
            if(_questionIndex == null)
                var _questionIndex = 0;
            $(document).on('click', '.add-answer', function(){
                alert('hi');
                _answerIndex = _answerIndex + 1;
                console.log(_answerIndex);
                $(this).closest('.answers').find('ol').append("<li class='ui-state-default test2'><div class='boxed-answer'><label class='answer'><input type='radio' name='correctAnswer'></span></label><input type='text' class='answer' name='answer"+_answerIndex+"' value=''> <button class='btn btn-danger btn-xs added-answer'>X</button></div></li>");
