                <div class="col-xs-6"> 
                   <div class="site-logo">
                        <h1>Testing Platform - Admin</h1>
                        <h3>Welcome <%= @current_user.first_name %></h3>
                    </div>
                </div>
                <div class="col-xs-6">
                    <nav class="navigation">
                        <a href="/admintests" class="btn btn-default">Dashboard</a>
